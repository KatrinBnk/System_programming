<Window x:Class="SysProgLaba1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysProgLaba1"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="ToolWindow"
        WindowState="Maximized"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0 0 0 15"
          Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="6*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- column 1 -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Column="0">
            <TextBlock HorizontalAlignment="Center" Margin="2" Foreground="{DynamicResource TextBrush}">Исходный текст</TextBlock>
            <Grid Height="350" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Номера строк -->
                <TextBox x:Name="SourceCodeLineNumbers_TextBox" 
                         Grid.Column="0"
                         IsReadOnly="True" 
                         TextAlignment="Right"
                         VerticalScrollBarVisibility="Hidden"
                         Background="{DynamicResource LineNumberBackgroundBrush}"
                         Foreground="{DynamicResource LineNumberForegroundBrush}"
                         BorderThickness="0,1,0,1"
                         BorderBrush="{DynamicResource BorderBrush}"
                         Padding="5,0,5,0"
                         FontFamily="Consolas"
                         VerticalAlignment="Stretch" />
                
                <!-- Код -->
                <TextBox x:Name="SourceCode_TextBox" 
                         Grid.Column="1"
                         AcceptsReturn="True" 
                         AcceptsTab="True" 
                         FontFamily="Consolas"
                         TextChanged="SourceCode_TextBox_TextChanged"
                         VerticalScrollBarVisibility="Visible"
                         ScrollViewer.ScrollChanged="SourceCode_ScrollChanged"
                         VerticalAlignment="Stretch"
                         Background="{DynamicResource ControlBackgroundBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource BorderBrush}" />
            </Grid>

            <TextBlock HorizontalAlignment="Center" Margin="2" Foreground="{DynamicResource TextBrush}">Таблица кодов операций</TextBlock>
            <TextBox x:Name="Commands_TextBox" AcceptsReturn="True" AcceptsTab="True" Height="300" HorizontalAlignment="Stretch" Margin="5" FontFamily="Consolas"
                     Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource TextBrush}" BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel> 

        <!-- column 2 -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Column="1">
            <TextBlock HorizontalAlignment="Center" Margin="2" Foreground="{DynamicResource TextBrush}">Вспомогательная таблица</TextBlock>
            <TextBox Name="FirstPass_TextBox" IsReadOnly="True" Height="350" HorizontalAlignment="Stretch" Margin="5"
                     Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource TextBrush}" BorderBrush="{DynamicResource BorderBrush}"/>

            <TextBlock HorizontalAlignment="Center" Margin="2" Foreground="{DynamicResource TextBrush}">Таблица символических имен</TextBlock>
            <TextBox Name="TSI_TextBox" IsReadOnly="True" Height="150" HorizontalAlignment="Stretch" Margin="5"
                     Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource TextBrush}" BorderBrush="{DynamicResource BorderBrush}"/>

            <TextBlock HorizontalAlignment="Center" Margin="2" Foreground="{DynamicResource TextBrush}">Ошибки первого прохода</TextBlock>
            <TextBox Name="FirstPassErrors_TextBox" IsReadOnly="True" Height="120" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Margin="5" 
                     Foreground="{DynamicResource ErrorBrush}" Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel>

        <!-- column 3 -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Column="2">
            <TextBlock HorizontalAlignment="Center" Margin="2" Foreground="{DynamicResource TextBrush}">Двоичный код</TextBlock>
            <TextBox Name="SecondPass_TextBox" IsReadOnly="True" Height="350" HorizontalAlignment="Stretch" Margin="5"
                     Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource TextBrush}" BorderBrush="{DynamicResource BorderBrush}"/>

            <TextBlock HorizontalAlignment="Center" Margin="2" Foreground="{DynamicResource TextBrush}">Ошибки второго прохода</TextBlock>
            <TextBox  Name="SecondPassErrors_TextBox" IsReadOnly="True" Height="120" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="5" 
                      Foreground="{DynamicResource ErrorBrush}" Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"/>
        </StackPanel>

        <!-- buttons row -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="FirstPass_Button" Height="30" Margin="10" Click="FirstPass_ButtonClick">Первый проход
            </Button>

            <Button Name="SecondPass_Button" Height="30" Margin="10" Click="SecondPass_ButtonClick" IsEnabled="False">Второй проход
            </Button>

            <Button Name="Reset_Button" Height="30" Margin="10" Click="Reset_ButtonClick">Сбросить
            </Button>

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                <TextBlock Text="Примеры:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource TextBrush}"/>
                <ComboBox Name="Examples_ComboBox" Width="250" Height="30" VerticalAlignment="Center"
                          Background="{DynamicResource ControlBackgroundBrush}" 
                          Foreground="{DynamicResource TextBrush}" 
                          BorderBrush="{DynamicResource BorderBrush}"/>
                <Button Name="LoadCode_Button" Height="30" Margin="10,0,0,0" Click="LoadCode_ButtonClick">Загрузить
                </Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>

